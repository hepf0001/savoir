---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-6 p-2 font-medium transition transform hover:-translate-y-1 uppercase";

const variantClasses = {
  primary: "bg-white hover:bg-slate-300 text-[#221f1f]",
  secondary: "border-2 border-white hover:border-slate-300 text-white hover:text-slate-300",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot button /></button>
